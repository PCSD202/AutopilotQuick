<mah:MetroWindow x:Class="AutopilotQuick.DebugWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:AutopilotQuick"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"
                 Title="Debug Information" SizeToContent="WidthAndHeight">
    <StackPanel>
        <mah:MetroHeader Header="DeviceID:"><TextBox IsReadOnly="True" Text="{Binding DeviceID}"/></mah:MetroHeader>
        <mah:MetroHeader Header="SessionID:"><TextBox IsReadOnly="True" Text="{Binding SessionID}"/></mah:MetroHeader>
        <mah:MetroHeader Header="Version:"><TextBox IsReadOnly="True" Text="{Binding Version}"/></mah:MetroHeader>
        <mah:MetroHeader Header="Service Tag:"><TextBox IsReadOnly="True" Text="{Binding ServiceTag}"/></mah:MetroHeader>
        <mah:MetroHeader Header="Model:"><TextBox IsReadOnly="True" Text="{Binding Model}"/></mah:MetroHeader>
    </StackPanel>
</mah:MetroWindow>
