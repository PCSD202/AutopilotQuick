<UserControl x:Class="AutopilotQuick.BatteryIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutopilotQuick"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Loaded="BatteryIndicator_OnLoaded">
    <Grid>
        <iconPacks:PackIconMaterial ToolTip="{Binding TooltipText}" x:Name="Icon" Foreground="{Binding BatteryColor}" Kind="{Binding IconKind}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
