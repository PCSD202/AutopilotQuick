<UserControl x:Class="AutopilotQuick.StepDisplay.StepProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutopilotQuick.StepDisplay"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:autopilotQuick="clr-namespace:AutopilotQuick"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
        <mah:MetroProgressBar x:Name="Bar" VerticalContentAlignment="Center" autopilotQuick:ProgressBarSmoother.SmoothValue="{Binding Progress}" Grid.Column="0" IsIndeterminate="{Binding Indeterminate}" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
